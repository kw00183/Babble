<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>

<GridPane xmlns:fx="http://javafx.com/fxml"
	prefWidth="350" alignment="CENTER" hgap="10" vgap="10">

	<Label text="Tiles" GridPane.columnIndex="0"
		GridPane.rowIndex="1" />

	<ListView id="listview" fx:id="listview"
		GridPane.columnIndex="0" GridPane.rowIndex="2" prefHeight="30" />

	<Label text="Your Word" GridPane.columnIndex="0"
		GridPane.rowIndex="3" />

	<TextField id="textfield" fx:id="textfield"
		GridPane.columnIndex="0" GridPane.rowIndex="4" />

	<HBox fx:id="HBox" prefWidth="325" GridPane.columnIndex="0"
		GridPane.rowIndex="5" spacing="10" alignment="CENTER_RIGHT">
		<children>
			<Button id="button" fx:id="button" text="Reset" />

			<Button id="button" fx:id="button" text="Play Word" />
		</children>
	</HBox>
	
	<HBox fx:id="HBox" prefWidth="325" GridPane.columnIndex="0"
        GridPane.rowIndex="6" spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 0 0 10 0;">
        <children>
            <Label text="Score:" />

            <TextField id="textfield" fx:id="textfield" />
        </children>
    </HBox>

</GridPane>